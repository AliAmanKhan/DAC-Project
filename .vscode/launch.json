{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Run All Services",
      "configurations": [
        // "User Service",
        "Pitch Service",
        "Collaboration Service",
        "Node Auth Service",
        "API Gateway",
        "Frontend (Vite)"
      ]
    }
  ],
  "configurations": [
    // {
    //   "type": "java",
    //   "name": "User Service",
    //   "request": "launch",
    //   "mainClass": "com.collabit.user.DemoApplication",
    //   "cwd": "${workspaceFolder}/Backend/Services/collabit_user"
    // },
    {
      "type": "java",
      "name": "Pitch Service",
      "request": "launch",
      "mainClass": "com.collabit.pitch.Application",
      "projectName": "collabit_pitch",
      "cwd": "${workspaceFolder}/Backend/Services/collabit_pitch"
    },
    {
      "type": "java",
      "name": "Collaboration Service",
      "request": "launch",
      "mainClass": "com.collabit.collaboration.Application",
      "projectName": "collabit_collaboration",
      "cwd": "${workspaceFolder}/Backend/Services/collabit_collaboration"
    },
    {
      "type": "node",
      "name": "Node Auth Service",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start"
      ],
      "program": "${workspaceFolder}/Backend/Node-Auth/index.js",
      "cwd": "${workspaceFolder}/Backend/Node-Auth",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "API Gateway",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/Backend/API-Gateway/src/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/Backend/API-Gateway",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      }
    },
    {
      "type": "node",
      "name": "Frontend (Vite)",
      "request": "launch",
      "program": "${workspaceFolder}/collab-it/node_modules/vite/bin/vite.js",
      "args": [
        "dev"
      ],
      "cwd": "${workspaceFolder}/collab-it"
    }
  ]
}